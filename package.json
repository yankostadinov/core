{
  "name": "glue42core",
  "version": "0.0.0",
  "description": "Web interoperability framework",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "npm run test:scripts && lerna run test",
    "e2e-server": "gluec serve --cwd=./e2e/config",
    "e2e": "karma start ./e2e/config/karma.conf.js",
    "release": "gulp release",
    "test:scripts": "mocha ./scripts/test/**/*spec.js",
    "lint:fix": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix",
    "release:live-examples": "node ./scripts/live-examples/reload-code-sandboxes.js"
  },
  "devDependencies": {
    "@lerna/changed": "^3.20.0",
    "@lerna/run": "^3.20.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-react": "^7.19.0",
    "gulp": "^4.0.2",
    "husky": "^4.2.3",
    "karma": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.0",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "mockery": "^2.1.0",
    "simple-git": "^1.131.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "./node_modules/.bin/eslint --ignore-path .gitignore ."
    ]
  }
}
